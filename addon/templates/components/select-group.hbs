<div class="ember-select-container dropdown-toggle js-dropdown-toggle" {{action "toggleDropdown"}}>
  <a class="form-control ember-select-choice {{buttonClass}} {{if disabled 'disabled'}}
  {{if hasFocus 'ember-select-focus'}}">
    {{#if selection}}
      {{view selectedItemView contentBinding="selection"}}
      <i class={{view.dropdownToggleIcon}}></i>
    {{else}}
      <span>{{prompt}}</span>
      <i class={{view.dropdownToggleIcon}}></i>
    {{/if}}
  </a>
</div>

<div class="dropdown-menu js-dropdown-menu {{dropdownMenuClass}}
  {{if isDropdownMenuPulledRight 'pull-right'}}">
  {{#unless isSelect}}
    <div class="ember-select-search">
      {{view searchView}}
    </div>
  {{/unless}}
  {{#if showDropdown}}
    {{view listView
      tagName="ul"
      classNames="ember-select-results"
      heightBinding="dropdownHeight"
      rowHeightBinding="rowHeight"
      contentBinding="groupedContent"
      itemViewClassBinding="itemView"
    }}
    {{#if isLoading}}
      <span class="ember-select-loading">Loading...</span>
    {{/if}}
    {{#if hasNoResults}}
      <span class="ember-select-no-results">No results match "{{query}}"</span>
    {{/if}}
  {{/if}}
  {{#if selectMenuView}}
    {{view selectMenuView}}
  {{/if}}
</div>
